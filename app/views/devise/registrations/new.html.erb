<%= render(Elements::HeadingComponent.new(heading_type: :h1)) do %>
  Sign up
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-10 mr-2 mb-5 ml-2 bg-blue-200 p-3"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mt-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded shadow w-full focus:ring-2 focus:ring-green-500", placeholder: "email@example.com" %>
  </div>

  <div class="mt-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded shadow w-full focus:ring-2 focus:ring-green-500", placeholder: "*******" %>
  </div>

  <div class="mt-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded shadow w-full focus:ring-2 focus:ring-green-500", placeholder: "*******" %>
  </div>

  <div class="mb-6">
    <%= f.submit "Sign up", class: "border border-blue-500 rounded shadow-lg text-center w-full mt-2 p-1 mb-2 bg-blue-900 text-white hover:bg-white hover:text-blue-900 hover:shadow-inner transition ease-in transform hover:-translate-y-1 hover:scale-101 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div class="mb-6">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
